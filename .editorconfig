# http://editorconfig.org
# https://github.com/facebook/react/blob/master/.editorconfig

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.md]
max_line_length = 0
trim_trailing_whitespace = false
